@model IEnumerable<Rocky.Models.ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">ApplicationType List</h2>
        </div>

        <div class="col-6 text-right">
            @*ссылка*@
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Application Type
            </a>
        </div>
    </div>

    @*добавление пустой строки*@
    <br />

    @if (Model.Count() > 0) @*означ наличие объектов в списке*@
    {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model)
                {
                            <tr>
                                <td width="50%">@obj.Name</td>
                                <td class="text-center">
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">     @*mx-2 для разделения кнопок*@
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @* нужен индентификатор = тэг-хелпер asp-route затем передаю Id (или др парам-р)
                                           Внутрь передаю индентификатор для Экшн метода КНОПОК*@
                                        <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                            <i class="far fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>

                            </tr>
                }
                </tbody>
            </table>
    }
    else
    {
                <p>No application type exists.</p>
    }
</div>