@model Rocky.Models.ApplicationType

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <h2 class="text-info p1-3"> Add Application Type </h2>
        </div>

        @* вставка снипета: *@
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control"></input>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                           <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>

                        <div class="col">
                            @*убрал asp-controller="Category" тк работаю в пределах одной модели*@
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fa fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

    </div>
</form>

@*плюсом: для валидации на стороне клиента*@
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial"/>
    }        @* такое имя взял из: Views -> Shared -> файл с этим именем *@

}