@model Rocky.Models.Category;

<form method="post">
    @*добавляю тк Id нигде не определен, а поиск идет по Id (in GET)*@
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div>
            <h2 class="text-info p1-3"> Delete Category </h2>
        </div>

        @* вставка снипета: *@
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    @*форма для ввода:*@
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" disabled></input>
                    </div>

                    @* удалил валидацию (код копипас из edit)  и добавляю disabled для недопустимости ввода в поле*@

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    @*форма для ввода:*@
                    <div class="col-8">
                        <input asp-for="DisplayOrder" class="form-control" disabled/>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                           <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            @*убрал asp-controller="Category" тк работаю в пределах одной модели*@
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fa fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

    </div>
</form>


@*плюсом: для валидации на стороне клиента*@
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial"/>
    }        @* такое имя взял из: Views -> Shared -> файл с этим именем *@

}